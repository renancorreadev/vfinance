[Unit]
Description=Besu Node 4 - QBFT Validator
After=network.target
Wants=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/besu/Node-4
Environment="JAVA_HOME=/usr/lib/jvm/java-1.21.0-openjdk-amd64"
ExecStart=/home/ubuntu/besu/Node-4/run.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=besu-node-4

[Install]
WantedBy=multi-user.target
